library ree_agent;

interface TipcPort {
  // Called by ree_agent when a new incoming connection request received
  1: Connect(TipcChannel local_handle) -> (status s, TipcChannel? peer_handle);
};

struct TipcPortInfo {
  string path;
  uint32 num_items;
  uint64 item_size;
};

[Discoverable]
interface TipcPortManager {
  // Publish a Port to PortManager
  1: Publish(TipcPort port, TipcPortInfo info) -> (status s);
};
